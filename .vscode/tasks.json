{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"echoCommand": true,
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": false,
		"panel": "dedicated",
		"showReuseMessage": false,
		"clear": true
	},
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"windows": {
				"command": "${workspaceFolder}\\build.bat",
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "Build & Run",
			"type": "shell",
			"windows": {
				"command": "${workspaceFolder}\\build.bat",
			},
			"args": ["run"],
		}
	]
}